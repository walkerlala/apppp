{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "*": ["node_modules/*"],
      "renderer/*": ["src/renderer/*"],
      "protos/*": ["./protos/*"],
      "common/*": ["src/common/*"]
    },
    "jsx": "react",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}